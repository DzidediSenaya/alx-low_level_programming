# Compiler and compiler flags
CC := gcc
CFLAGS := -Wall -Wextra -Werror

# Source files
SRC := main.c school.c

# Output executable name
TARGET := school

# Rule to build the executable
all: $(TARGET)

$(TARGET): $(SRC)
	$(CC) $(CFLAGS) $(SRC) -o $(TARGET)

# Clean rule to remove the executable
clean:
	rm -f $(TARGET)
