CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic
NAME := school
RM := /bin/rm -f

SRC := $(filter-out main.c, $(wildcard *.c))
OBJ := $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) main.c -o $(NAME)

$(OBJ): %.o: %.c
	$(CC) -c $(CFLAGS) -o $@ $<

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all
